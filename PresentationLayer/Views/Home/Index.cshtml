@using System.IO
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <script src="https://cdn.jsdelivr.net/npm/knockout@3.5.1/build/output/knockout-latest.min.js"></script>
</div>
<style>
    .card-header{
        background-color: #FFAA16;
    }

    /* Ocultar contenido mientras carga */
    .dashboard-content {
        opacity: 0;
        transition: opacity 0.5s ease-in;
    }

    .dashboard-content.loaded {
        opacity: 1;
    }
</style>

<div class="row gy-4 dashboard-content" id="dashboardContent">
    <!-- Alertas -->
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header text-white">
                <h5 class="card-title mb-0">Alertas</h5>
            </div>
            <div class="card-body">
                <div class="row g-3" data-bind="foreach: registrosAlerta">
                    <div class="col-md-6">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <h5 class="card-title" data-bind="text: nombre"></h5>
                                <p class="card-text text-muted" data-bind="text: descripcion"></p>
                                <button class="btn btn-outline-primary btn-sm" data-bind="click: $root.Editar">Acción</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Proyectos -->
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header text-white">
                <h5 class="card-title mb-0">Proyectos</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: Hoy"></h2>
                        </div>
                        <h6 class="fw-bold">Hoy</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: EstaSemana"></h2>
                        </div>
                        <h6 class="fw-bold">Esta Semana</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: ProximaSemana"></h2>
                        </div>
                        <h6 class="fw-bold">Próxima Semana</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: TotalProyectos"></h2>
                        </div>
                        <h6 class="fw-bold">Total Proyectos</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Materiales -->
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header text-white">
                <h5 class="card-title mb-0">Materiales</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: Hoy_Material"></h2>
                        </div>
                        <h6 class="fw-bold">Hoy</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: EstaSemana_Material"></h2>
                        </div>
                        <h6 class="fw-bold">Esta Semana</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: ProximaSemana_Material"></h2>
                        </div>
                        <h6 class="fw-bold">Próxima Semana</h6>
                    </div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: TotalMaterial"></h2>
                        </div>
                        <h6 class="fw-bold">Total Materiales</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Proyectos Finalizados -->
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header text-white">
                <h5 class="card-title mb-0">Proyectos Finalizados</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: ProyectoTiempo"></h2>
                        </div>
                        <h6 class="fw-bold">En Tiempo</h6>
                    </div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col">
                        <div class="card bg-light shadow-sm">
                            <h2 class="card-title my-2" data-bind="text: ProyectoExtra"></h2>
                        </div>
                        <h6 class="fw-bold">Extratemporal</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var RolId = @Html.Raw(ViewBag.RolId);
        var UsuarioId = @Html.Raw(ViewBag.UsuarioId);
    </script>
    <script src="~/js/Home/Home.js?v=@DateTime.Now.Ticks"></script>
}
